<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="식물 상세 입력"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constop1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/constop2"
            app:layout_constraintTop_toTopOf="@+id/cons0"
            app:layout_constraintStart_toStartOf="@+id/cons0">

            <TextView
                android:id="@+id/textname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@+id/constop1"
                app:layout_constraintTop_toTopOf="@+id/constop1" />

            <EditText
                android:id="@+id/editname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"

                app:layout_constraintStart_toStartOf="@+id/constop1"
                app:layout_constraintTop_toBottomOf="@+id/textname" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constop2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/cons0"
            app:layout_constraintTop_toTopOf="@+id/cons0"
            app:layout_constraintStart_toEndOf="@+id/constop1">

            <TextView
                android:id="@+id/textnick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식물애칭"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="@+id/constop2"
                app:layout_constraintTop_toTopOf="@+id/constop2" />

            <EditText
                android:id="@+id/editnick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"

                app:layout_constraintStart_toStartOf="@+id/constop2"
                app:layout_constraintTop_toBottomOf="@+id/textnick" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons0">

        <TextView
            android:id="@+id/textbirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생일"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="@+id/cons1"
            app:layout_constraintTop_toTopOf="@+id/cons1" />

        <EditText
            android:id="@+id/editbirth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toStartOf="@+id/cons1"
            app:layout_constraintTop_toBottomOf="@+id/textbirth" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons1">

        <TextView
            android:id="@+id/textphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="@+id/cons2"
            app:layout_constraintTop_toTopOf="@+id/cons2" />

        <EditText
            android:id="@+id/editphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"

            app:layout_constraintStart_toStartOf="@+id/cons2"
            app:layout_constraintTop_toBottomOf="@+id/textphone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons2">

        <TextView
            android:id="@+id/textclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물주기알람시간"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="@+id/cons3"
            app:layout_constraintTop_toTopOf="@+id/cons3" />

        <EditText
            android:id="@+id/editclock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/cons3"
            app:layout_constraintTop_toBottomOf="@+id/textclock" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons3">

        <TextView
            android:id="@+id/textweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물주기알람주기"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="@+id/cons4"
            app:layout_constraintTop_toTopOf="@+id/cons4" />

        <EditText
            android:id="@+id/editweek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/cons4"
            app:layout_constraintTop_toBottomOf="@+id/textweek" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/switch_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/cons4"
        app:layout_constraintStart_toStartOf="@+id/cons4"
        app:layout_constraintTop_toBottomOf="@+id/cons4">

        <View
            android:id="@+id/view5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#00BCD4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/numberPicker"
            app:layout_constraintStart_toStartOf="@+id/numberPicker"
            app:layout_constraintTop_toTopOf="@+id/numberPicker" />

        <View
            android:id="@+id/view6"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#00BCD4"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/numberPicker2"
            app:layout_constraintStart_toStartOf="@+id/numberPicker2"
            app:layout_constraintTop_toTopOf="@+id/numberPicker2" />

        <View
            android:id="@+id/view7"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:background="#00BCD4"
            app:layout_constraintBottom_toBottomOf="@+id/numberPicker3"
            app:layout_constraintEnd_toEndOf="@+id/numberPicker3"
            app:layout_constraintStart_toStartOf="@+id/numberPicker3"
            app:layout_constraintTop_toTopOf="@+id/numberPicker3" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="132dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <NumberPicker
            android:id="@+id/numberPicker2"
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            app:layout_constraintBottom_toBottomOf="@+id/numberPicker"
            app:layout_constraintEnd_toStartOf="@+id/numberPicker3"
            app:layout_constraintStart_toEndOf="@+id/numberPicker"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <NumberPicker
            android:id="@+id/numberPicker3"
            android:layout_width="wrap_content"
            android:layout_height="132dp"
            app:layout_constraintBottom_toBottomOf="@+id/numberPicker2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/detail_ok_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cons4"
        app:layout_constraintStart_toStartOf="@+id/cons4" />
</androidx.constraintlayout.widget.ConstraintLayout>