<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CustomDialog"
        android:layout_margin="@dimen/margin_16dp">
        <ImageView
            android:id="@+id/watering_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android_logo"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/watering_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남쿵둥이와는"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/watering_image"
            app:layout_constraintEnd_toEndOf="@id/watering_image"
            app:layout_constraintTop_toBottomOf="@id/watering_image"/>

        <TextView
            android:id="@+id/watering_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무슨 대화를 해볼까요?"
            android:textSize="@dimen/text_8sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/watering_image"
            app:layout_constraintEnd_toEndOf="@id/watering_image"
            app:layout_constraintTop_toBottomOf="@id/watering_title"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/user_status1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            style="@style/Widget.MaterialComponents.Chip.Action"
            app:layout_constraintTop_toBottomOf="@id/watering_subtitle"
            app:layout_constraintEnd_toStartOf="@id/watering_image"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/user_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test2"
            android:layout_marginStart="@dimen/margin_16dp"
            style="@style/Widget.MaterialComponents.Chip.Action"
            app:layout_constraintTop_toBottomOf="@id/watering_subtitle"
            app:layout_constraintStart_toEndOf="@id/user_status1"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/user_status3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test3"
            android:layout_marginStart="@dimen/margin_16dp"
            style="@style/Widget.MaterialComponents.Chip.Action"
            app:layout_constraintTop_toBottomOf="@id/watering_subtitle"
            app:layout_constraintStart_toEndOf="@id/user_status2"/>

        <Button
            android:id="@+id/watering_phone_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화"
            app:layout_constraintTop_toBottomOf="@id/user_status1"
            app:layout_constraintStart_toStartOf="@id/user_status1"/>

        <Button
            android:id="@+id/watering_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/user_status1"
            app:layout_constraintStart_toEndOf="@id/watering_phone_call"/>

        <Button
            android:id="@+id/watering_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintTop_toBottomOf="@id/user_status1"
            app:layout_constraintStart_toEndOf="@id/watering_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>