<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_16dp"
    app:cardCornerRadius="@dimen/radius_16dp">

    <ImageView
        android:id="@+id/need_water_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/android_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/need_water_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="물을 주세요!"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/need_water_image"
        app:layout_constraintStart_toStartOf="@id/need_water_image"
        app:layout_constraintTop_toBottomOf="@id/need_water_image" />

    <TextView
        android:id="@+id/need_water_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="고민하기보다는 그냥 해보는거에요!"
        android:textSize="@dimen/text_8sp"
        app:layout_constraintEnd_toEndOf="@id/need_water_image"
        app:layout_constraintStart_toStartOf="@id/need_water_image"
        app:layout_constraintTop_toBottomOf="@id/need_water_title" />

    <TextView
        android:id="@+id/need_water_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:text="고민했던 것보다 분명 훨씬 더 좋은 결과일거에요"
        android:textSize="@dimen/text_8sp"
        app:layout_constraintEnd_toEndOf="@id/need_water_image"
        app:layout_constraintStart_toStartOf="@id/need_water_image"
        app:layout_constraintTop_toBottomOf="@id/need_water_subtitle" />

    <Button
        android:id="@+id/need_water_accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_12dp"
        android:background="@drawable/button_black_border"
        android:gravity="center"
        android:text="물주기"
        android:textSize="@dimen/text_8sp"
        app:layout_constraintEnd_toEndOf="@id/need_water_image"
        app:layout_constraintStart_toStartOf="@id/need_water_image"
        app:layout_constraintTop_toBottomOf="@id/need_water_subtitle2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:text="다음에 할게요"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/need_water_image"
        app:layout_constraintStart_toStartOf="@id/need_water_image"
        app:layout_constraintTop_toBottomOf="@id/need_water_accept_btn" />
</androidx.cardview.widget.CardView>
